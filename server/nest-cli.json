{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "currency-conversion": {
      "type": "library",
      "root": "libs/currency-conversion",
      "entryFile": "index",
      "sourceRoot": "libs/currency-conversion/src",
      "compilerOptions": {
        "tsConfigPath": "libs/currency-conversion/tsconfig.lib.json"
      }
    },
    "cache": {
      "type": "library",
      "root": "libs/cache",
      "entryFile": "index",
      "sourceRoot": "libs/cache/src",
      "compilerOptions": {
        "tsConfigPath": "libs/cache/tsconfig.lib.json"
      }
    }
  }
}